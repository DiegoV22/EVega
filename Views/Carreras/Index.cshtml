@model IEnumerable<EVega.Models.Carrera>

@{
    ViewData["Title"] = "Ingresa tu Carrera";
}

<h1>Carrera</h1>

<p>
    <a asp-action="Create">Ingresar nueva Carrera</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCarrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSemestre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCarrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Campus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSemestre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCarrera">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCarrera">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCarrera">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
